<div class="navbar navbar-expand-sm navbar-light navbar-cocktail">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://www.icon.com.mt/wp-content/uploads/2014/11/Unwind-icon.png" %>
  <% end %>
  <!-- -->
</div>
<!-- banner for homepage -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://4.bp.blogspot.com/-8dQ08sNbfIo/UaFvfTT4nYI/AAAAAAAAX7M/8CSyxFPIoik/s1600/Leonardo-Dicaprio-The-Great-Gatsby-2013-Sharped-Dressed-Man.png);">
  <div class="container-small">
    <h1>Welcome to <strong>Le Fawncy Cocktail</strong></h1>
    <p>Your one stop shop for impressing those fancy guests with the fanciest cocktails ever created</p>
  </div>
</div>
<!-- list of cocktails -->
<div class="container">
  <h1>🍸🕺 Our Cocktails 🕺🏻🍸</h1>
</div>
<%= link_to "Add a new cocktail", new_cocktail_path(@cocktail), class:'btn btn-white' %>
<div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-4">
      <div class="card">
        <%= image_tag cocktail.image, class:"image" %>
        <h3><%= cocktail.name %></h3>
        <p><%= link_to "Omg, let's make it! ~~ 💁🏻‍♀️", cocktail_path(cocktail), class:"link" %></p>
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" } do %><i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<!-- footer -->
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
